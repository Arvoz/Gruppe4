@model IoTProject.Core.Domain.GroupDevice

<h2>Create Group</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="GroupName"></label>
        <input asp-for="GroupName" class="form-control" />
        <span asp-validation-for="GroupName" class="text-danger"></span>
    </div>

    <h3>Add Device</h3>
    <div class="form-group">
        <label asp-for="Devices[0].DeviceName">Device Name</label>
        <input asp-for="Devices[0].DeviceName" class="form-control" />
        <span asp-validation-for="Devices[0].DeviceName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Devices[0].Type">Device Type</label>
        <input asp-for="Devices[0].Type" class="form-control" />
        <span asp-validation-for="Devices[0].Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Devices[0].Status">Device Status</label>
        <input asp-for="Devices[0].Status" class="form-control" />
        <span asp-validation-for="Devices[0].Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Group</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
